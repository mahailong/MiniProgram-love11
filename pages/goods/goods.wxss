/* pages/goods/goods.wxss */
.container{
  font-family: "微软雅黑";
}
.banner{
  height: 475rpx;
}
.name{
  color: #804130;
  padding: 24rpx;
  position: relative;
  border-bottom: 2rpx solid #7b3a28;
}
.name .en{
  font-size: 26rpx;
}
.name .ch{
  font-size: 34rpx;
  padding-top: 10rpx;
}
.price{
  position: absolute;
  top:66rpx;
  right: 24rpx;
  color: #bf0008;
  font-size: 44rpx;
}
.tab{
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
}
.tab image{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 4rpx;
  margin-right: 10rpx;
}
.tab-item{
  width: 50%;
  font-size: 28rpx;
  padding-bottom: 10rpx;
}
.weight{
  padding: 24rpx;
  border-bottom: 2rpx solid #7b3a28;
}
.weight .title{
    color: #8e6a55;
    font-size: 28rpx;
    padding-bottom: 10rpx;
}
.wt-content{
    display: flex;
}
.wt-item{
    padding: 0 24rpx;
    margin: 20rpx;
    text-align: center;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 28rpx;
    float: left;
    margin-left: 0;
    color: #804130;
    border: 1px solid #804130;
    background-color: #fff;
}
.active{
    color: #fff;
    border: 2rpx solid #804130;
    background-color: #804130;
}
.detail{
  margin-bottom: 100rpx;
}
.detail image{
  width: 100%;
  display: block;
}
.buy{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  background: #bf0008;
  text-align: center;
  font-size: 30rpx;
}